//- 
    ********************************************************************************
    Mixin to create and initialize the navbar component and its parent elements.

    arguments:
        name: The text that will appear in the branding section.
        id: The unique id to use for this component.
        (optional) style: Bootstrap navbar colour style to use.
    ********************************************************************************
mixin nav(name, id, style)
    - var style = (typeof(style) === 'undefined') ? 'default' : style
    
    nav(class=['navbar', 'navbar-' + style])
        //- . is shorthand for div.
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', 
                                               data-toggle='collapse', 
                                               data-target='#' + id, 
                                               aria-expanded='false', 
                                               aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#')= name
            
            .collapse.navbar-collapse(id= id)
                ul.nav.navbar-nav
                    block

//-
    ********************************************************************************
    Mixin to add a menu item nested under the nav mixin.

    arguments:
        href:
        active:
    ********************************************************************************
mixin nav_item(href, active)
    li(class=['active']): a(href=href)
        block

